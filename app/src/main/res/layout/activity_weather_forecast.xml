<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pinky.androidlabs.WeatherForecast">

    <ImageView
        android:id="@+id/iv_temparature"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/current_temparature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crnt Temp" />

    <TextView
        android:id="@+id/min_temparature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crnt Temp" />

    <TextView
        android:id="@+id/max_temparature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Temp" />

    <TextView
        android:id="@+id/speedWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crnt Temp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />
</LinearLayout>
